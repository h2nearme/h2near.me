<% content_for :title, "New offtaker location" %>

<div class="container" data-controller="geocoder" data-key="<%= ENV['MAPBOX_API_KEY'] %>">
  <div class="row">
    <div class="col-6">
      <div class="form-wrapper">
        <div class="form">
          <%= link_to offtakers_path, class: "back-button" do %>
            &larr; Back to dashboard
          <% end %>
          <h1>
            New offtaker location
          </h1>
          <%= render partial: "form", locals: { offtaker_location: @offtaker_location } %>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div id="map" data-geocoder-target="map"></div>
      <div id="hidden-coordinate-input" data-geocoder-target="hiddenInput" class="d-non"></div>
    </div>
  </div>
</div>